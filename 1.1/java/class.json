{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/asledgehammer/PZ-Rosetta-Schema/main/1.1/java/class.json",
    "type": "object",
    "minItems": 1,
    "additionalProperties": false,
    "properties": {
        "generics": {
            "$ref": "generics"
        },
        "deprecated": {
            "type": "boolean",
            "description": "If the class is deprecated."
        },
        "javaType": {
            "type": "string"
        },
        "extends": {
            "type": "string"
        },
        "fields": {
            "type": "object",
            "minItems": 1,
            "patternProperties": {
                "^": {
                    "$ref": "field"
                }
            }
        },
        "constructors": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "constructor"
            }
        },
        "methods": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "method"
            }
        },
        "modifiers": {
            "$ref": "modifiers"
        },
        "notes": {
            "type": "string"
        },
        "tags": {
            "$ref": "../tags"
        }
    }
}